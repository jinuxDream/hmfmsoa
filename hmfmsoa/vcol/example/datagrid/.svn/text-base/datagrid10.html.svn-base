<script type="text/javascript">


$(document).ready(function(){	
	$('.btn').PicButton();
	var bar=$('.btn_toolbar').BtnToolBar();//初始化按钮工具条
	var g=$('.grid1').datagrid({toolbar:bar});//或执行代码 g[0].grid.setBar(bar);	也可以
	//	$.fn.appendElements = function(el,irow,icol,op.linkid,op.clear,op.tohead){		

	$('#btn_add').click(function(){
		g.appendElements('<input type="checkbox" name="sel_data">',{icol:$('#icol').val(),linkid:1});
		g.appendElements('<a href="#" id="sel_all">反选111</a>',{icol:$('#icol').val(),linkid:1,clear:true,tohead:true});
		$('#sel_all').check_against2("sel_data");
	});
	$('#btn_add2').click(function(){
		g.appendElements('<input type="text" name="abc" size="10">',{icol:2,linkid:2,clear:true});
	});
	$('#btn3').click(function(){
		g.appendElements('<input type="checkbox" name="abc">',{irow:$('#irow').val(),icol:$('#icol').val()});
	});
	$('#btn4').click(function(){
		g.appendElements('<input type="input" name="someinput">',{irow:g.getCurrIndex()});
	});
	$('#btn5').click(function(){
		g.appendElements('<select  name="sel_data"><option value="00">编辑</option><option value="01">提交审核</option></select>',
		{irow:0,icol:4,clear:true,tohead:true});
	});
	$('#btn6').click(function(){
		g.addcol('<input type="text" name="amt" value="" size="10" v_type="decimal2">',{width:100,title:'交款金额'});
		$('#form1').setValidator();
	});
	var grid_fixhead=$('.grid_fixhead').datagrid({fixhead:true});//或执行代码 g[0].grid.setBar(bar);	也可以
	$('#btn21').click(function(){
		grid_fixhead.appendElements('<input type="checkbox" name="abc">',{irow:$('#irow').val(),icol:$('#icol').val()});
	});
	$('#btn22').click(function(){
		grid_fixhead.appendElements('<input type="input" name="someinput">',{irow:$('#irow').val(),icol:3});
	});
	$('#btn23').click(function(){
		grid_fixhead.appendElements('<select  name="sel_data"><option value="00">编辑</option><option value="01">提交审核</option></select>',
		{icol:5,clear:true,tohead:true});
	});
	$('#btn24').click(function(){
		grid_fixhead.addcol('<input type="checkbox" name="abc">',{ipos:2,width:100,title:'交款金额'});
	});
	

});		
	
</script>

