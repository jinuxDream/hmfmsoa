<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app id="WebApp">
	<display-name>mng_plat_tow</display-name>
	<filter>
		<filter-name>CharsetEncoding</filter-name>
		<display-name>CharsetEncoding</display-name>
		<filter-class>fd.commons.web.filters.CharsetEncoding</filter-class>
	</filter>
	<filter>
		<filter-name>BizTraceFilter</filter-name>
		<display-name>BizTraceFilter</display-name>
		<filter-class>fd.commons.web.filters.BizTraceFilter</filter-class>
		<init-param>
			<param-name>nonfilted_uri</param-name>
			<param-value> ,/login.do,/login.jsp ,/index.do </param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>CharsetEncoding</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>BizTraceFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<servlet>
		<servlet-name>dwr-invoker</servlet-name>
		<display-name>DWR Servlet</display-name>
		<servlet-class>uk.ltd.getahead.dwr.DWRServlet</servlet-class>
		<init-param>
			<param-name>debug</param-name>
			<param-value>true</param-value>
		</init-param>
		<init-param>
			<param-name>config</param-name>
			<param-value>/WEB-INF/dwr.xml</param-value>
		</init-param>
	</servlet>
	
	<servlet>
		<servlet-name>action</servlet-name>
		<servlet-class>org.apache.struts.action.ActionServlet</servlet-class>
		<init-param>
			<param-name>config</param-name>
			<param-value> 
				/WEB-INF/hmfmscfg/struts-config.xml,
				/WEB-INF/hmfmscfg/struts-config-commons.xml,
				/WEB-INF/hmfmscfg/struts-config-sysmng.xml
			</param-value>
		</init-param>
		<init-param>
			<param-name>debug</param-name>
			<param-value>2</param-value>
		</init-param>
		<init-param>
			<param-name>detail</param-name>
			<param-value>2</param-value>
		</init-param>
		<load-on-startup>2</load-on-startup>
	</servlet>
	 
	<servlet>
		<servlet-name>InitSingletonServlet</servlet-name>
		<servlet-class>hmfms.web.commons.InitSingleton</servlet-class>
		<init-param>
		  <param-name>fd-core-version</param-name>
		  <param-value>12</param-value>
		</init-param>
		<init-param>
			<param-name>debug</param-name>
			<param-value>1</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>action</servlet-name>
		<url-pattern>*.do</url-pattern>
	</servlet-mapping>
	 
	 <servlet-mapping>
		<servlet-name>dwr-invoker</servlet-name>
		<url-pattern>/ajx/*</url-pattern>
	</servlet-mapping>
	 
	<mime-mapping>
		<extension>xls</extension>
		<mime-type>application/msexcel</mime-type>
	</mime-mapping>
	<welcome-file-list>
		<welcome-file>/jsp/login.jsp</welcome-file>
	</welcome-file-list>		
	<error-page>
		<error-code>500</error-code>
		<location>/jsp/commons/page500.jsp</location>
	</error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/jsp/commons/page404.jsp</location>
    </error-page>
    <error-page>
        <error-code>403</error-code>
        <location>/jsp/commons/page403.jsp</location>
    </error-page>	
    <error-page>
       <exception-type>java.lang.Exception</exception-type>
       <location>/jsp/commons/exception.jsp</location>
    </error-page>	
	<resource-ref>
		<description>Oracle Datasource example</description>
		<res-ref-name>jdbc/hmfmsds</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>
</web-app>

